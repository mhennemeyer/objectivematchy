{
    Class = Native;
    ProductType = "com.apple.product-type.bundle";
    Description = "Target for building a unit test bundle for iPhoneOS";
    CustomBuildSettings = {
        ALWAYS_SEARCH_USER_PATHS = NO;
        INFOPLIST_FILE = "«PRODUCTNAME»-Info.plist";
        OTHER_LDFLAGS =	"-framework Foundation -framework SenTestingKit -framework UIKit";
		GCC_ENABLE_OBJC_EXCEPTIONS = YES;
        PRODUCT_NAME = "«PRODUCTNAME»";
        PREBINDING = NO;
        WRAPPER_EXTENSION = "octest";
		GCC_ENABLE_FIX_AND_CONTINUE = NO;
		FRAMEWORK_SEARCH_PATHS = "$(DEVELOPER_LIBRARY_DIR)/Frameworks";
    };
    CustomProductSettings = {
        CFBundleExecutable = "${EXECUTABLE_NAME}";
        CFBundleInfoDictionaryVersion = "6.0";
        CFBundleVersion = "1.0";
        CFBundleIdentifier = "com.yourcompany.${PRODUCT_NAME:identifier}";
        CFBundleDevelopmentRegion = English;
        CFBundlePackageType = "BNDL";
        CFBundleSignature = "????";
    };
	BuildPhases = (
        {
            Class = Resources;
        },
        {
            Class = Sources;
        },
        {
            Class = Frameworks;
        },
        {
			Class = ShellScript;
			ShellPath = /bin/sh;
			ShellScript = "# Run the unit tests in this test bundle.\n\"${SYSTEM_DEVELOPER_DIR}/Tools/RunUnitTests\"\n";
        },
	);
}
